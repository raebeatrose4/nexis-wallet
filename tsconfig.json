{
  "extends": "./tsconfig.paths.json",
  "allowSyntheticDefaultImports": true,
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2018",
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es2015",
      "dom",
      "es6"
    ],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./craco.config.js",
    "./custom.d.ts",
    "./src/**/*.spec.ts"
  ],
  "exclude": []
}
